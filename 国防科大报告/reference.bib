@article{macfarlaneAcademicIntegrityReview2014,
  title = {Academic Integrity: A Review of the Literature},
  shorttitle = {学术诚信：文献综述},
  author = {Macfarlane, Bruce and Zhang, Jingjing and Pun, Annie},
  year = {2014},
  month = feb,
  journal = {Stud. High. Educ.},
  volume = {39},
  number = {2},
  pages = {339--358},
  issn = {0307-5079},
  doi = {10.1080/03075079.2012.709495},
  urldate = {2024-06-09},
  abstract = {This article provides a literature review on academic integrity, which encompasses the values, behaviour and conduct of academics in all aspects of their practice. This is a growing area of academic research as a result of the expansion of higher education on a global basis and concerns about standards of professional conduct. The article maps the main strands of research on academic integrity by reference to teaching, research and service using 115 articles derived from both western and Chinese literature. The review indicates that much of the literature is framed in terms of misconduct or academic corruption with research ethics the dominant focus. Researchers investigating academic integrity draw predominantly on multivariate analysis using surveys/questionnaires, documentary analysis and, more occasionally, interviews. While there has been rapid growth in the literature, a stronger focus is needed on identifying `ethical' as well as `unethical' practice despite the methodological challenges in overcoming social desirability reporting. 【摘要翻译】本文提供了关于学术诚信的文献综述，包括学者在实践的各个方面的价值观、行为和操守。由于高等教育在全球范围内的扩张和对职业行为标准的关注，这是一个不断增长的学术研究领域。本文利用115篇中西文献，从教学、研究和服务三个方面勾勒出学术诚信研究的主线。综述表明，许多文献都是以不端行为或学术腐败为框架的，研究伦理是主要焦点。调查学术诚信的研究人员主要使用调查/问卷、文献分析以及更偶尔的访谈进行多元分析。虽然文献增长迅速，但尽管在克服社会期望报告方面存在方法上的挑战，但仍需要更加关注识别``道德''和``不道德''的实践。},
  langid = {english},
  lccn = {2},
  keywords = {/unread},
  annotation = {🏷️ /unread},
  file = {D:\zotero v7.0\zotero storage\Zotero\storage\LUDVF8G9\Macfarlane 等 - 2014 - Academic integrity a review of the literature.pdf}
}

@article{mcgowanAcademicIntegrityAwareness2005,
  title = {Academic {{Integrity}}: {{An Awareness}} and {{Development Issue}} for {{Students}} and {{Staff}}},
  shorttitle = {学术诚信：学生和教职员工的意识和发展问题},
  author = {McGowan, U. and McGowan, U.},
  year = {2005},
  month = jul,
  journal = {JUTLP},
  volume = {2},
  number = {3},
  pages = {56--66},
  issn = {1449-9789},
  doi = {10.53761/1.2.3.6},
  urldate = {2024-06-09},
  abstract = {University plagiarism policies aimed at assuring academic integrity provide for increased vigilance and disciplinary procedures to deal with transgressions. Many policies also include guidelines to teaching staff to ensure that students are adequately informed about the meaning of plagiarism and its consequences, and about methods of citing within the particular referencing system in use. However, the experience of academic advising has indicated that receiving such information is insufficient for students who, for a variety of reasons, inadvertently lapse into plagiarism. This is particularly the case for international students for whom English is a second or additional language. A simple and not excessively timeconsuming strategy is proposed for academics to ensure that students have the opportunity to learn not only the mechanics of what they are required to do, but also the reasons for the requirements and assistance in learning the language for fulfilling these requirements. The strategy involves, firstly, the induction of students into the concept of evidence-based learning as the essential characteristic of university learning, teaching and research, and secondly, the application of a tool such as genre analysis for mastering the language of their discipline. This is an awareness and development issue that is particularly important for international students whose time within the English-speaking Australian university environment may be limited to three or four years. The proposed strategy has the potential of becoming a powerful mechanism for reducing the incidence of inadvertent plagiarism, as well as raising the overall standard of written work for an increasing range of students. 【摘要翻译】旨在确保学术诚信的大学剽窃政策规定提高警惕和纪律程序来处理违规行为。许多政策还包括对教学人员的指导方针，以确保学生充分了解剽窃的含义及其后果，以及在使用的特定参考系统中引用的方法。然而，学术咨询的经验表明，对于由于各种原因无意中陷入剽窃的学生来说，收到这样的信息是不够的。对于英语是第二或附加语言的国际学生来说尤其如此。为学者们提出了一个简单且不过分耗时的策略，以确保学生不仅有机会学习他们被要求做的事情的机制，而且有机会学习要求的原因和满足这些要求的语言帮助。该策略包括，首先，引导学生接受循证学习的概念，将其作为大学学习、教学和研究的基本特征，其次，应用体裁分析等工具来掌握其学科的语言。这是一个意识和发展问题，对于国际学生来说尤其重要，他们在澳大利亚英语大学环境中的时间可能仅限于三四年。所提出的策略有可能成为一个强大的机制，减少无意剽窃的发生率，并提高越来越多的学生书面作业的整体标准。},
  langid = {english},
  lccn = {0},
  keywords = {/unread},
  annotation = {🏷️ /unread},
  file = {D:\zotero v7.0\zotero storage\Zotero\storage\SLW6KI3K\University of Adelaide和McGowan - 2005 - Academic Integrity An Awareness and Development Issue for Students and Staff.pdf}
}

